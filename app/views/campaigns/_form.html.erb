<div class="container">
    <%= simple_form_for(@campaign, :defaults => { :input_html => { :class => "form-control" } }) do |form| %>
      <%= form.input :name %>
      <%= form.input :address %>
      <%= form.input :amount %>
      <%= form.input :end_date, as: :date %>
      <%= form.input :description, as: :text %>
      <%= form.input :tags, as: :string %>
    
    <div id="items">
      <h2>Rewards</h2>
      <%= form.nested_fields_for :rewards, render_template: true, :defaults => { :input_html => { :class => "form-control" } } do |phone| %>
        <fieldset class="template">
          <%= phone.input :amount %>
          <%= phone.input :description %>
    
          <a href="#" class="remove">remove</a>
    
          <%= phone.input :id, as: :hidden %>
          <%= phone.input :_destroy, as: :hidden %>
        </fieldset>
      <% end %>
      <a href="#" class="add btn btn-success">add reward</a>
    </div>
    <p><%= form.button :submit %></p>
    <% end %>
</div>
