  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Donate</h4>
      </div>
      <div class="modal-body">
          <p><%= @reward.description %></p>
          <p>
            <a href="#" onClick="pleaseWait();" class="btn btn-info btn-lg" data-action="complete-donation" data-controller="<%= payment_path(@reward) %>"><i class="fa fa-credit-card fa-2x"></i> Bid for this Reward!</a>
            <div class="alert alert-success" id="pleaseWait" role="alert" style="display:none"><i class="fa fa-cog fa-spin"></i> Please wait...</div>
          </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
